{
  "version": "1.0.0",
  "project": {
    "name": "AI Security Audit Framework",
    "description": "Enterprise-grade security scanning and remediation platform"
  },
  "defaults": {
    "region": "us-east-1",
    "output": "json",
    "scan_type": "comprehensive"
  },
  "scan_options": {
    "enable_ai_analysis": true,
    "enable_hephaestus": true,
    "enable_remediation": false,
    "enable_notifications": true,
    "parallel_scans": 5,
    "timeout_minutes": 30
  },
  "ai_config": {
    "bedrock_model": "anthropic.claude-3-sonnet-20240229-v1:0",
    "max_retries": 3,
    "temperature": 0.7,
    "max_tokens": 4096
  },
  "notification_channels": {
    "slack": {
      "enabled": false,
      "webhook_param": "/security-audit/slack-webhook-url"
    },
    "teams": {
      "enabled": false,
      "webhook_param": "/security-audit/teams-webhook-url"
    },
    "email": {
      "enabled": false,
      "sns_topic": "security-audit-alerts"
    }
  },
  "storage": {
    "results_bucket": "security-scan-results-${AWS_ACCOUNT_ID}-${AWS_REGION}",
    "retention_days": 90,
    "encryption": "AWS_MANAGED"
  },
  "security_services": {
    "guardduty": {
      "enabled": true,
      "threat_intel_sets": []
    },
    "security_hub": {
      "enabled": true,
      "standards": ["AWS_FOUNDATIONAL", "CIS_AWS", "PCI_DSS"]
    },
    "config": {
      "enabled": true,
      "rules": ["REQUIRED_TAGS", "S3_BUCKET_PUBLIC_READ_PROHIBITED"]
    }
  },
  "scan_targets": {
    "repositories": [],
    "ecr_registries": [],
    "lambda_functions": [],
    "ecs_clusters": [],
    "s3_buckets": []
  },
  "exclusions": {
    "paths": [
      "**/node_modules/**",
      "**/.git/**",
      "**/build/**",
      "**/dist/**",
      "**/__pycache__/**"
    ],
    "file_types": [
      "*.log",
      "*.tmp",
      "*.cache"
    ]
  },
  "custom_rules": {
    "enabled": false,
    "rules_path": ".security/custom_rules/"
  }
}